---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    // FunciÃ³n slugify dentro para evitar errores de alcance
    function slugify(text: string) {
        return text
            .toString()
            .toLowerCase()
            .replace(/\s+/g, '-')     
            .replace(/[^\w\-]+/g, '') 
            .replace(/\-\-+/g, '-')   
            .replace(/^-+/, '')       
            .replace(/-+$/, '');      
    }

    const allPosts = await getCollection('blog');
    
    // CORRECCIÃ“N ROBUSTA:
    // 1. Usamos (post.data.categories || []) para evitar fallos si un post no tiene categorÃ­as
    // 2. AÃ±adimos 'as string[]' al final para forzar el tipo y que TS no se queje
    const uniqueCategories = [...new Set(allPosts.map((post) => post.data.categories || []).flat())].filter(Boolean) as string[];

    // Al haber puesto 'as string[]' arriba, ya no necesitamos poner ': string' aquÃ­ abajo
    return uniqueCategories.map((category) => {
        const filteredPosts = allPosts.filter((post) => 
            post.data.categories && post.data.categories.includes(category)
        );
        
        filteredPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

        return {
            params: { category: slugify(category) },
            props: { 
                categoryName: category,
                posts: filteredPosts 
            },
        };
    });
}

const { categoryName, posts } = Astro.props; 
const displayTitle = categoryName || Astro.params.category;
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={`${displayTitle} - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
                width: 100%;
                height: auto;
                object-fit: cover;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
            .category-header {
                border-bottom: 2px solid var(--accent);
                padding-bottom: 10px;
                margin-bottom: 30px;
            }
            .category-header h1 {
                text-transform: capitalize;
                font-size: 2.5em;
            }
            .count {
                font-size: 0.5em;
                background: var(--accent);
                color: var(--bg-color);
                padding: 2px 8px;
                border-radius: 10px;
                vertical-align: middle;
            }

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
            <div class="category-header">
                <h1>ðŸ“‚ {displayTitle} <span class="count">{posts.length}</span></h1>
            </div>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={typeof post.data.heroImage === 'object' ? post.data.heroImage.src : post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										{post.data.pubDate.toLocaleDateString('es-ES', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>