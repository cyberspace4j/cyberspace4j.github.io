---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ParticlesBackground from '../components/ParticlesBackground.astro';
import Rocket from '../components/Rocket.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{SITE_TITLE}</title>
    <meta name="description" content={SITE_DESCRIPTION} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <ParticlesBackground />
    <Rocket />

    <main class="hero-container">
        
        <div class="intro-badge">
            Javier N. González   •   Security Analyst
        </div>
        
        <h1 class="brand-title">
            Bienvenido a <br class="mobile-break" />
            <span class="title-text">CyberSpace<span class="brand-accent">4J</span></span>
        </h1>

        <div class="subtitle-wrapper">
            <span id="typing-text" class="brand-subtitle"></span><span class="cursor"></span>
        </div>

        <div class="action-container">
            <a href="/blog/" class="btn-main">&gt;_ ENTRAR AL BLOG</a>
            <a href="/about/" class="link-minimal">O descubre más <strong>sobre mí</strong> <i class="fas fa-arrow-right"></i></a>
        </div>

        <div class="social-icons">
            <a href="https://github.com/javiernglz" target="_blank" class="social-link" aria-label="Github"><i class="fab fa-github"></i></a>
            <a href="https://www.linkedin.com/in/javier-n-gonz%C3%A1lez-504862331/" target="_blank" class="social-link" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
            <a href="mailto:log4j.avi@gmail.com" class="social-link" aria-label="Email"><i class="fas fa-envelope"></i></a>
        </div>

    </main>

    <style>
        :root {
            --bg-color: #050507;
            --accent: #7c3aed; /* Morado base del blog */
            --accent-glow: rgba(124, 58, 237, 0.4);
            --text-main: #ffffff;
            --text-muted: #94a3b8; /* Slate 400 */
        }
        
        body {
            margin: 0; padding: 0; overflow: hidden;
            background-color: var(--bg-color);
            /* Mismo fondo radial que el blog pero centrado */
            background: radial-gradient(circle at center, #1e1b4b 0%, #000000 100%);
            font-family: 'Atkinson Hyperlegible', sans-serif;
            height: 100vh;
            display: flex; flex-direction: column; justify-content: center; align-items: center;
        }

        /* --- CONTENEDOR PRINCIPAL (YA NO ES UNA CARD CERRADA) --- */
        .hero-container {
            position: relative; z-index: 10;
            text-align: center;
            max-width: 900px;
            padding: 0 20px;
            animation: fadeIn 1.5s ease-out;
        }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

        /* --- 1. BADGE INTRO --- */
        .intro-badge {
            display: inline-block;
            margin-bottom: 1.5rem;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--text-main);
            font-size: 0.95rem;
            font-weight: 500;
            backdrop-filter: blur(5px);
        }

        /* --- 2. ESTILOS TÍTULO (COPIADOS DEL BLOG) --- */
        .brand-title {
            font-size: 2rem; /* Tamaño para "Bienvenido a" */
            font-weight: 400;
            color: var(--text-muted);
            margin: 0 0 1.5rem 0;
            line-height: 1.2;
        }

        .title-text {
            display: block;
            margin-top: 0.5rem;
            font-size: 5rem; /* GIGANTE */
            font-weight: 900;
            letter-spacing: -0.03em;
            
            /* DEGRADADO ESTILO BLOG */
            background: linear-gradient(to right, #ffffff 30%, #a78bfa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            
            /* GLOW / RESPLANDOR */
            filter: drop-shadow(0 0 40px var(--accent-glow));
        }

        .brand-accent {
            /* DEGRADADO MORADO A OSCURO EN EL 4J */
            background: linear-gradient(180deg, #a855f7 0%, #4c1d95 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* --- 3. SUBTÍTULO / TYPING --- */
        .subtitle-wrapper {
            font-size: 1.4rem;
            color: var(--text-muted);
            min-height: 1.6em; /* Evita saltos cuando no hay texto */
            margin-bottom: 3rem;
            font-weight: 400;
        }

        .cursor {
            display: inline-block; width: 3px; height: 1.2em;
            background-color: var(--accent);
            animation: blink 1s infinite;
            vertical-align: middle; margin-left: 5px;
            border-radius: 2px;
        }
        @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0; } }

        /* --- 4. BOTONES --- */
        .action-container {
            display: flex; flex-direction: column; align-items: center; gap: 20px;
            margin-bottom: 40px;
        }

        .btn-main {
            display: inline-block;
            padding: 18px 45px;
            /* Degradado morado estilo Blog */
            background: linear-gradient(135deg, #7c3aed 0%, #3b82f6 100%);
            color: white;
            font-weight: 800; /* Atkinson Bold */
            text-decoration: none;
            border-radius: 999px; /* Pill shape completa */
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 0 20px rgba(124, 58, 237, 0.4); /* Glow inicial */
            font-size: 1.1rem;
            letter-spacing: 0.5px;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .btn-main:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 0 40px rgba(124, 58, 237, 0.6); /* Glow intenso */
            filter: brightness(1.1);
        }

        .link-minimal {
            font-size: 0.95rem; color: rgba(255, 255, 255, 0.5);
            text-decoration: none; transition: all 0.3s ease;
        }
        .link-minimal strong { color: #ffffff; font-weight: 700; }
        .link-minimal:hover { color: var(--accent); }
        .link-minimal i { margin-left: 6px; transition: transform 0.3s; }
        .link-minimal:hover i { transform: translateX(4px); }

        /* --- 5. SOCIAL ICONS --- */
        .social-icons {
            display: flex; justify-content: center; gap: 30px;
        }
        .social-link {
            color: rgba(255, 255, 255, 0.4);
            font-size: 1.6rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .social-link:hover {
            color: #ffffff;
            transform: translateY(-3px);
            filter: drop-shadow(0 0 10px rgba(255,255,255,0.5));
        }

        /* --- RESPONSIVE --- */
        @media (max-width: 768px) {
            .title-text { font-size: 3.5rem; }
            .brand-title { font-size: 1.5rem; }
            .mobile-break { display: block; }
            .subtitle-wrapper { font-size: 1.1rem; }
        }
    </style>

    <script>
        const textToType = "Mi blog donde comparto mis recursos de ciberseguridad";
        const speedText = 30; // Un poco más rápido
        let index = 0;
        
        function typeWriterText() {
            const element = document.getElementById("typing-text");
            if (element && index < textToType.length) {
                element.innerHTML += textToType.charAt(index);
                index++;
                setTimeout(typeWriterText, speedText);
            }
        }
        
        // Iniciamos un poco antes para que no haya delay vacío
        setTimeout(typeWriterText, 500);
    </script>
</body>
</html>